{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE"
  },
  "deploy": {
    "startCommand": "java -Dspring.profiles.active=production -Dserver.port=$PORT -Dmanagement.endpoint.health.probes.add-additional-paths=true -Dmanagement.health.livenessstate.enabled=true -Dmanagement.health.readinessstate.enabled=true -jar target/app-0.0.1-SNAPSHOT.jar",
    "healthcheckPath": "/actuator/health",
    "healthcheckTimeout": 300,
    "healthcheckInterval": 15,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
